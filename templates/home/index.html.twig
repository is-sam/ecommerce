{% extends "base.html.twig" %}

{% block title %}Homepage{% endblock %}

{% block body %}
<div class="container pt-5 pb-5">
    <h3>Meilleurs ventes</h3>
    <div class="row">
    {% for product in products %}
        <div class="col">
            <div class="card">
                <img src="{{ product.picture }}" alt="Image Produit" class="img-fluide">
                <div class="card-body">
                    <h4 class="card-title">{{ product.name }}</h4>
                    <p class="card-text font-weight-bold">
                        {{ product.price / 100 }} €
                    </p>
                    <p class="card-text text-muted">
                        {{ product.category.name }}
                    </p>
                    <p class="card-text text-justify">
                        {{ product.description }}
                    </p>
                    <a href="#" class="btn btn-primary btn-sm">Détails</a>
                    <a href="{{ path('cart_add', {id: product.id}) }}" class="btn btn-success btn-sm">Ajouter</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>

    <hr>

    <h2>Nos Garanties</h2>
